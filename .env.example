# VPS Setup Configuration Template
# Copy this file to .env and update with your actual values
# Values below are safe placeholders - example.com is reserved per RFC 2606

# SSH Settings
SSH_PORT=2222

# User
NEW_USERNAME=vpsadmin

# Timezone
TIMEZONE=UTC

# Docker
DOCKER_USER=vpsadmin

# WireGuard
WG_INTERFACE=wg0
WG_PORT=51820
WG_SERVER_IP=10.0.0.1
WG_CLIENT_NAME=laptop
WG_DNS=1.1.1.1,8.8.8.8

# Prometheus Monitoring
PROMETHEUS_RETENTION=15d

# Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=YOUR_SECURE_PASSWORD_HERE

# Email Alerts (for Alertmanager)
# RFC 2606: example.com is reserved for documentation
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=YOUR_SMTP_USERNAME
SMTP_PASSWORD=YOUR_SMTP_APP_PASSWORD
ALERT_FROM=noreply@example.com
ALERT_TO=your-email@example.com